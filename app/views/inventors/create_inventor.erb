<style>
  .flash {
    color: red;
    font-size: 20px;
  }
</style>

<div class="flash">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>

<h2>Please create your Inventor Profile here</h2>

<form action="/signup" method="POST">

  <label for="name">Name: </label>
  <input id="name" type="text" name="name" placeholder="Name"></input><br></br>
  <label for="username">Username: </label>
  <input id="username" type="text" name="username" placeholder="Username"></input><br></br>
  <label for="email">Email: </label>
  <input id="email" type="text" name="email" placeholder="Email"></input><br></br>
  <label for="password">Password: </label>
  <input id="password" type="password" name="password" placeholder="Password"></input><br></br>

  <p><input type="submit" value="Submit"></input></p>


</form>
