<style>
  .flash {
    color: red;
    font-size: 20px;
  }
</style>

<div class="flash">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>

<h3>Name of the Inventor: </h3>

<h2><%= @inventor.name %></h2>

<h3>Inventions: </h3><br>

<% @inventions.each do |invention| %>
  <h4><%= invention.name %></h4>
  <p>- <%= invention.description %></p>
<% end %>

<br>

<p><a href="/inventions">Click here to view all Inventions</a></p>

<br>

<form action="/inventors/<%= @inventor.slug %>/edit" method="POST">
  <input type="submit" value="Edit Profile"></input>
</form>
<br>
<form action="/inventors/<%= @inventor.slug %>/delete" method="POST">
  <input type="submit" value="Delete Profile"></input>
</form>
<br></br>
