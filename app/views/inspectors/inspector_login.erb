<style>
  .flash {
    color: red;
    font-size: 20px;
  }
</style>

<div class="flash">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>

<h2>Please Log In Here as an Inspector</h2>

<form action="/inspector_login" method="POST">

  <label for="username">Username: </label>
  <input id="username" type="text" name="username" placeholder="Username"></input><br></br>
  <label for="password">Password: </label>
  <input id="password" type="password" name="password" placeholder="Password"></input><br></br>

  <p><input type="submit" value="Log In"></input></p>

</form><br></br>
